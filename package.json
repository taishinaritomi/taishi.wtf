{
  "name": "@taishi-wtf/monorepo",
  "version": "1.0.0",
  "author": "Taishi Naritomi",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "fix": "biome check --write . && terraform fmt",
    "check": "biome check . && turbo check",
    "tf:setup": "cd tf_setup && terraform apply -var-file variables.tfvars",
    "tf:deploy:plan": "cd tf_deploy && terraform plan -var-file variables.tfvars",
    "tf:deploy": "cd tf_deploy && terraform apply -var-file variables.tfvars"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.14.10",
    "turbo": "^2.0.9",
    "typescript": "^5.5.3"
  }
}
